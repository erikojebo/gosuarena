@model GosuArena.Entities.Bot

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/Content/Bot/Edit.less")" />
}

@Html.ValidationSummary(true, "The bot could not be created")

<h1>@Model.Name</h1>
    
<form method="POST" action="@Url.Action("Edit")" role="form" class="change-tracked">
    <fieldset>
        <legend>Edit bot</legend>
            
        <input type="hidden" name="Id" value="@Model.Id" />

        <div>
            <label for="Script">JavaScript for the bot</label>
            <textarea name="Script" placeholder="JavaScript goes here...">@Model.Script</textarea>
        </div>

        <button type="submit" class="main-submit clear-dirty-flags">Save</button>
    </fieldset>
</form>
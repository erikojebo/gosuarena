@using GosuArena.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/GosuArena.less")" />
</head>
    <body class="container">
        <header>
            <div id="menu-bar-container">
                <div id="menu-bar">
                    
                    <nav>
                        <ul>
                            <li>@Html.NavigationMenuItem("Play", "Home", "Play match!")</li>
                            <li>@Html.NavigationMenuItem("MyProfile", "Home", "Profile")</li>
                        </ul>
                    </nav>

                    <menu id="account">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.NavigationMenuItem("LogOff", "Account", "Log out")
                        }
                        else
                        {
                            @Html.NavigationMenuItem("Login", "Account", "Login")
                            @Html.NavigationMenuItem("Register", "Account", "Sign up")
                        }
                    </menu>
                </div>
            </div>

            <h1>Gosu Arena</h1>
        </header>

        @RenderBody()
    
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery-2.0.0.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery.validate.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery.validate.unobtrusive.js")"></script>
    </body>
</html>

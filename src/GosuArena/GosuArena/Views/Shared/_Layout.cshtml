<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/GosuArena.less")" />
</head>
    <body class="container">
        <header>
            <div id="menu-bar-container">
                <div id="menu-bar">
                    <menu>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("LogOff", "Account")">Log out</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")">Login</a>
                            <a href="@Url.Action("Register", "Account")">Sign up</a>
                        }
                    </menu>
                </div>
            </div>

            <h1>Gosu Arena</h1>
        </header>

        @RenderBody()
    
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery-2.0.0.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery.validate.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery/jquery.validate.unobtrusive.js")"></script>
    </body>
</html>
